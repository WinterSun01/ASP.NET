@model List<ReviewApp.Models.Review>

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>User Reviews</title>
    <style>
        .form-container 
        {
            max-width: 400px;
            margin-bottom: 20px;
        }

        .form-group 
        {
            margin-bottom: 15px;
        }

            .form-group label 
            {
                display: block;
                font-weight: bold;
                margin-bottom: 4px;
            }

            .form-group input,
            .form-group textarea 
            {
                width: 100%;
                padding: 6px;
                box-sizing: border-box;
            }

        .form-submit 
        {
            margin-top: 10px;
        }

        ul 
        {
            padding-left: 0;
            list-style: none;
        }

        li 
        {
            margin-bottom: 15px;
            border-bottom: 1px solid #ccc;
            padding-bottom: 10px;
        }
    </style>
</head>
<body>

    <h1>User Reviews</h1>

    <form method="post" asp-controller="Home" asp-action="AddReview" class="form-container">
        <div class="form-group">
            @Html.Label("Author", "Author:")
            @Html.TextBox("Author", null, new { required = "required" })
        </div>
        <div class="form-group">
            @Html.Label("Message", "Message:")
            @Html.TextArea("Message", null, new { rows = "4", required = "required" })
        </div>
        <div class="form-group">
            @Html.Label("Rating", "Rating (1–5):")
            @Html.TextBox("Rating", null, new { type = "number", min = "1", max = "5", required = "required" })
        </div>
        <div class="form-group form-submit">
            <button type="submit">Submit Review</button>
        </div>
    </form>

    <hr />

    <h2>Latest Reviews</h2>
    @if (Model.Count == 0)
    {
        <p>No reviews yet.</p>
    }
    else
    {
        <ul>
            @foreach (var review in Model)
            {
                <li>
                    <strong>@review.Author</strong> (Rating: @review.Rating)<br />
                    <em>@review.CreatedAt.ToString("g")</em><br />
                    @review.Message
                </li>
            }
        </ul>
    }

</body>
</html>
