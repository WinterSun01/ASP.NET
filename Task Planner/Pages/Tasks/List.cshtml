@page
@model Task_Planner.Pages.Tasks.ListModel
@{
    ViewData["Title"] = "Task List";
}

<h2>Task List</h2>

<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Description</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var task in Model.Tasks)
        {
            <tr>
                <td>@task.Title</td>
                <td>@task.Description</td>
                <td>
                    <a asp-page="/Tasks/Edit" asp-route-id="@task.Id" class="btn btn-primary btn-sm">Edit</a>
                    <form method="post" asp-page-handler="Delete" asp-route-id="@task.Id" style="display:inline;">
                        <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
